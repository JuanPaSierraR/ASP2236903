@model IEnumerable<ASP2236903.Models.Reporte>
@{
    ViewBag.Title = "Reporte";
}

<h2>Reporte</h2>

<table class="table">
    <tr>
        <th>Nombre Cliente</th>
        <th>Documento Cliente</th>
        <th> Email Cliente</th>
        <th>Total Compra</th>
        <th>Fecha Compra</th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.nombre) </td>
                    <td>@Html.DisplayFor(modelItem => item.documentoCliente) </td>
                    <td>@Html.DisplayFor(modelItem => item.emailCliente) </td>
                    <td>@Html.DisplayFor(modelItem => item.totalCompra) </td>
                    <td>@Html.DisplayFor(modelItem => item.fechaCompra) </td>
                </tr>
            }

</table>
@Html.ActionLink("Imprimir reporte", "PdfReporte") 

