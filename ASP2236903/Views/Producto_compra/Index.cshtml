@model IEnumerable<ASP2236903.Models.producto_compra>

@{
    ViewBag.Title = "Index";
}

<h2>Producto Compra</h2>

<p>
    @Html.ActionLink("Crear nuevo producto_compra", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Fecha de compra
        </th>
        <th>
            Nombre Producto
        </th>
        <th>
            Cantidad
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>

            @ASP2236903.Controllers.Producto_compraController.FechaCompra(item.id_compra)
        </td>
        <td>
            @ASP2236903.Controllers.Producto_compraController.NombreProdcuto(item.id_producto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.cantidad)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
